{
  "compilerOptions": {
    "lib": [
       "es6"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "app/dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
    
 },
 "include": ["src/**/*.ts"],
 "exclude": ["node_modules", "**/*.spec.ts"]
}
